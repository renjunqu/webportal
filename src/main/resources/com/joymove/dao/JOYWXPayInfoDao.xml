<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joymove.dao.JOYWXPayInfoDao">
    <resultMap type="JOYWXPayInfo" id="joywxpayinfo">
        <constructor>
            <idArg column="id" javaType="Integer" />
            <arg column="out_trade_no" javaType="string" />
            <arg column="mobileNo" javaType="string" />
            <arg column="totalFee" javaType="Double" />
            <arg column="payOverFlag" javaType="Integer" />
        </constructor>
    </resultMap>

    <sql id="userColumn">
        u.id,
        u.out_trade_no,
        u.mobileNo,
        u.totalFee,
        u.payOverFlag
    </sql>
    <sql id="likeCondition"> like </sql>

    <insert id="insertWXPayInfo" parameterType="JOYWXPayInfo" useGeneratedKeys="false">
        insert into JOY_WXPayInfo(out_trade_no,mobileNo,totalFee) values(#{out_trade_no},#{mobileNo},#{totalFee});
    </insert>

    <select id="getNeededPayInfo" resultMap="joywxpayinfo" parameterType="map">
        select <include refid="userColumn"/>
        from JOY_WXPayInfo u
        <trim suffixOverrides="and">
            <where>
                <if test="mobileNo!=null">mobileNo=#{mobileNo} and </if>
                <if test="out_trade_no!=null">out_trade_no=#{out_trade_no} and</if>
                <if test="payOverFlag!=null">payOverFlag=#{payOverFlag} and</if>
            </where>
        </trim>
    </select>

    <update id="markPayInfo" parameterType="joywxpayinfo">
        update JOY_WXPayInfo set payOverFlag = 1
        <where>
            out_trade_no = #{out_trade_no}
        </where>
    </update>


</mapper>



















